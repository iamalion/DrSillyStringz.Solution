@{
    Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
    <h1>Engineers</h1>
</div>
<hr />

@if (@Model.Count == 0)
{
    <p>No engineers yet added</p>
}

<ul>
    @foreach (Engineer engineer in Model)
    {
        <li>@Html.ActionLink($"{engineer.EngineerName}, {engineer.JobTitle}", "Details", new { id = engineer.EngineerId })</li>
    }
</ul>
<div class="link-container">
    <p>@Html.ActionLink("Add new engineer", "Create", "Engineers")</p>
    <p>@Html.ActionLink("Return home", "Index", "Home")</p>
</div>
@{
    Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
    <h1>Machines</h1>
</div>
<hr />

@if (@Model.Count == 0)
{
    <p>No machines yet added</p>
}

<ul>
    @foreach (Machine machine in Model)
    {
        <li>@Html.ActionLink($"{machine.MachineName}, {machine.ManufactureDate}", "Details", new { id = machine.MachineId })</li>
    }
</ul>
<div class="link-container">
    <p>@Html.ActionLink("Add New Machine", "Create", "Machines")</p>
    <p>@Html.ActionLink("Return Home", "Index", "Home")</p>
</div>
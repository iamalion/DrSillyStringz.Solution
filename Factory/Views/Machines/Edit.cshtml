@{
    Layout = "_Layout";
}

@model Factory.Models.Machine
<div class="container">
    <h1>Edit Machine</h1>
    <h4>Editing: @Html.DisplayFor(model => model.MachineName)</h4>
</div>
<hr />

@using (Html.BeginForm())
{
    <div class="form-container">
        @Html.HiddenFor(model => model.MachineId)
        <div>
            @Html.LabelFor(model => model.MachineName)
            @Html.EditorFor(model => model.MachineName)
        </div>
    </div>
    <div class="center">
        <input type="submit" value="Save" class="button"/>
    </div>
    <div class="link-container">
        <p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
        <p>@Html.ActionLink("Back to all machines", "Index")</p>
    </div>

}
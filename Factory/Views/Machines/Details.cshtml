@{
    Layout = "_Layout";
}
@using Factory.Models
@model Factory.Models.Machine

<div class="container">
    <h1>Machine Details</h1>
    <h3>@Html.DisplayNameFor(model => model.MachineName) @Html.DisplayFor(model => model.MachineName)</h3>
    <h3>@Html.DisplayNameFor(model => model.ManufactureDate) @Html.DisplayFor(model => model.ManufactureDate)</h3>
    
</div>
<hr />
<div class="container">
@if(@Model.JoinEntities.Count == 0)
{
  <p>There are no engineers allowed to operate this machine.</p>
}
else
{
  <h4>The following engineers are allowed to operate this machine:</h4>
  <ul>
  @foreach(EngineerMachine join in Model.JoinEntities)
  {
    <li>@join.Engineer.EngineerName</li>
  }
  </ul>
}
</div>
<hr />
<div class="link-container">
    <p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
    <p>@Html.ActionLink("Add Machine to Engineer", "AddEngineer", new {id = Model.MachineId})</p>
    <p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId})</p>
    <p>@Html.ActionLink("Back to All Machines", "Index")</p>
    <p>@Html.ActionLink("Return Home", "Index", "Home")</p>
</div>